        <dependency>
            <groupId>org.apache.spark</groupId>
            <artifactId>spark-hive_${spark_scala.version}</artifactId>
            <version>${spark.version}</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/mysql/mysql-connector-java -->
        <dependency>
